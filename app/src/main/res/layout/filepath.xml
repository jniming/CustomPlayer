<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:layout_marginTop="7dp"
				android:background="@drawable/item_bg_selector"
>

	<ImageView
		android:id="@+id/dir_img" android:layout_width="50dp"
		android:layout_height="44dp"
		android:layout_centerVertical="true"
		android:layout_marginLeft="38dp"
		android:src="@mipmap/icon_file"/>

	<LinearLayout android:layout_width="wrap_content"
				  android:layout_height="match_parent"
				  android:layout_toRightOf="@+id/dir_img"
				  android:orientation="vertical"
				  android:layout_marginLeft="20dp"
				  android:gravity="center_vertical"
	>
		<TextView android:id="@+id/dirname"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"

				  android:layout_marginRight="50dp"
				  android:ellipsize="end"
				  android:gravity="left"
				  android:maxEms="15"
				  android:maxLines="2"

				  android:text="weixin"
				  android:textColor="@color/main_item_title"
				  android:textSize="15sp"/>


		<TextView android:id="@+id/dirnum"
				  android:layout_marginTop="10dp"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:text="34个文件"
				  android:gravity="left"
				  android:textSize="10.7sp"></TextView>

	</LinearLayout>
</RelativeLayout>