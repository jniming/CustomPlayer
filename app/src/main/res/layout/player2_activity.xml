<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			>


	<com.ggpl.player.media.IjkVideoView
		android:id="@+id/video_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>


	<include android:id="@+id/kzq_layout" layout="@layout/player_menu"/>





	<ProgressBar android:id="@+id/loading_progress"
		android:layout_width="wrap_content"
				 android:layout_gravity="center"
				 android:layout_height="wrap_content"/>


	<LinearLayout
		android:visibility="gone"
		android:id="@+id/center_layout"
		android:layout_gravity="center"
android:orientation="vertical"
		android:background="#7f000000"
		android:layout_width="100dp" android:gravity="center"
				  android:layout_height="100dp">
		<ImageView
					   android:id="@+id/center_textview"
					   android:layout_gravity="center"
					   android:layout_width="wrap_content"
					   android:layout_height="wrap_content"
					   android:gravity="center"

android:src="@mipmap/ic_brightness"

		/>


	</LinearLayout>



</FrameLayout>